@model DAW2P0.Business.Usuario

@{
    ViewData["Title"] = "Login";
}

<br />
<br />

<form id="AjaxForm">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4 mx-5">

            <div class="row justify-content-center">
                <div class="form-group mx-3">
                    <label asp-for="user" style="display:block;">Usuario:</label>
                    <input asp-for="user" class="form-control datepicker" style="display:inline; width:200px;" value="" id="user" />
                    <span asp-validation-for="user" class="text-danger"></span>
                </div>
                <div class="form-group mx-5">
                    <label asp-for="password">Contraseña:</label>
                    <input asp-for="password" class="form-control" style="width:200px;" value="" id="password" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div class="row justify-content-center">
                <div class="form-group mx-4">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary form-control">Logear</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<div id="proceso" class="col-md-12 text-center" style="display:none;">
    <img src="~/imagenes/ajax-loading-gif.gif" width="150" />
    <p style="text-align:center;">
        Validando ...
    </p>
</div>
<div id="error" style="display:none;margin-top: 20px;"><p class='alert alert-danger'>Usuario y/o contraseña incorrecto/s.</p></div>

@section Scripts{
    <script src="~/js/Login.js"></script>
}